<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="VolunteerWindow" Height="550" Width="400"
        Loaded="Window_Loaded" Closed="Window_Closed"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Content="Id:" HorizontalAlignment="Right" Grid.Row="0"/>
        <TextBox Text="{Binding CurrentVolunteer.Id, Mode=TwoWay}" IsReadOnly="{Binding ButtonText, Converter={StaticResource ConvertUpdateToTrueKey}}" Width="200" Grid.Row="0" Grid.Column="1"/>

        <Label Content="Name:" HorizontalAlignment="Right" Grid.Row="1"/>
        <TextBox Text="{Binding CurrentVolunteer.Name, Mode=TwoWay}" Width="200" Grid.Row="1" Grid.Column="1"/>

        <Label Content="Phone:" HorizontalAlignment="Right" Grid.Row="2"/>
        <TextBox Text="{Binding CurrentVolunteer.Phone, Mode=TwoWay}" Width="200" Grid.Row="2" Grid.Column="1"/>

        <Label Content="Email:" HorizontalAlignment="Right" Grid.Row="3"/>
        <TextBox Text="{Binding CurrentVolunteer.Email, Mode=TwoWay}" Width="200" Grid.Row="3" Grid.Column="1"/>

        <Label Content="Password:" HorizontalAlignment="Right" Grid.Row="4"
               Visibility="{Binding ButtonText, Converter={StaticResource ConvertAddToVisibleKey}}"/>
        <TextBox Text="{Binding CurrentVolunteer.Password, Mode=TwoWay}" Width="200" Grid.Row="4" Grid.Column="1"
                 Visibility="{Binding ButtonText, Converter={StaticResource ConvertAddToVisibleKey}}"/>

        <Label Content="Address:" HorizontalAlignment="Right" Grid.Row="5"/>
        <TextBox Text="{Binding CurrentVolunteer.Address, Mode=TwoWay}" Width="200" Grid.Row="5" Grid.Column="1"/>

        <Label Content="Latitude:" HorizontalAlignment="Right" Grid.Row="6"
               Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>
        <TextBox Text="{Binding CurrentVolunteer.Latitude, Mode=TwoWay}" IsReadOnly="true" Width="200" Grid.Row="6" Grid.Column="1"
                 Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>

        <Label Content="Longitude:" HorizontalAlignment="Right" Grid.Row="7"
               Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>
        <TextBox Text="{Binding CurrentVolunteer.Longitude, Mode=TwoWay}" IsReadOnly="True" Width="200" Grid.Row="7" Grid.Column="1"
                 Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>

        <Label Content="Role:" HorizontalAlignment="Right" Grid.Row="8"/>
        <ComboBox SelectedItem="{Binding CurrentVolunteer.Role, Mode=TwoWay}" Width="200" Grid.Row="8" Grid.Column="1" ItemsSource="{Binding Source={StaticResource RoleCollectionKey}}" />

        <Label Content="Is Active:" HorizontalAlignment="Right" Grid.Row="9"/>
        <CheckBox IsChecked="{Binding CurrentVolunteer.IsActive, Mode=TwoWay}" Width="200" Grid.Row="9" Grid.Column="1"/>

        <Label Content="Max Distance:" HorizontalAlignment="Right" Grid.Row="10"/>
        <TextBox Text="{Binding CurrentVolunteer.MaxDistance, Mode=TwoWay}" Width="200" Grid.Row="10" Grid.Column="1"/>

        <Label Content="Distance Type:" HorizontalAlignment="Right" Grid.Row="11"/>
        <ComboBox SelectedItem="{Binding CurrentVolunteer.DistanceType, Mode=TwoWay}" 
                  ItemsSource="{Binding Source={StaticResource DistanceTypeCollectionKey}}" 
                  Width="200" Grid.Row="11" Grid.Column="1" />

        <Label Content="Num Calls Handle:" HorizontalAlignment="Right" Grid.Row="12"
               Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>
        <TextBox Text="{Binding CurrentVolunteer.NumCallsHandle, Mode=TwoWay}" IsReadOnly="True" Width="200" Grid.Row="12" Grid.Column="1"
                 Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>

        <Label Content="Num Calls Cancel:" HorizontalAlignment="Right" Grid.Row="13"
               Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>
        <TextBox Text="{Binding CurrentVolunteer.NumCallsCancel, Mode=TwoWay}" IsReadOnly="True" Width="200" Grid.Row="13" Grid.Column="1"
                 Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>

        <Label Content="Num Calls Not Valid:" HorizontalAlignment="Right" Grid.Row="14"
               Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>
        <TextBox Text="{Binding CurrentVolunteer.NumCallsNotValid, Mode=TwoWay}" IsReadOnly="True" Width="200" Grid.Row="14" Grid.Column="1"
                 Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>

        <Label Content="Current Call:" HorizontalAlignment="Right" Grid.Row="15"
               Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>
        <TextBox Text="{Binding CurrentVolunteer.Call, Mode=TwoWay}" IsReadOnly="True" Width="200" Grid.Row="15" Grid.Column="1"
                 Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}"/>

        <Button Content="{Binding ButtonText}" Click="BtnAddUpdate_Click" Width="150" Grid.Row="16" Margin="102,10,148,14" Grid.ColumnSpan="2"/>
    </Grid>
</Window>