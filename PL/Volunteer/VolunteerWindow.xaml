<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="VolunteerWindow" Height="600" Width="400" Padding="50"
        Loaded="Window_Loaded" Closed="Window_Closed"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Content="Id:" HorizontalAlignment="Right" Grid.Row="0" />
        <TextBox Text="{Binding CurrentVolunteer.Id, Mode=TwoWay}" PreviewTextInput="NumberTextBox_PreviewTextInput"
                 IsReadOnly="{Binding ButtonText, Converter={StaticResource ConvertUpdateToTrueKey}}" Width="200" Grid.Row="0" Grid.Column="1"/>

        <Label Content="Name:" HorizontalAlignment="Right" Grid.Row="1"/>
        <TextBox Text="{Binding CurrentVolunteer.Name, Mode=TwoWay}" Width="200" Grid.Row="1" Grid.Column="1"/>

        <Label Content="Phone:" HorizontalAlignment="Right" Grid.Row="2"/>
        <TextBox Text="{Binding CurrentVolunteer.Phone, Mode=TwoWay}" PreviewTextInput="NumberTextBox_PreviewTextInput"
                 Width="200" Grid.Row="2" Grid.Column="1"/>

        <Label Content="Email:" HorizontalAlignment="Right" Grid.Row="3"/>
        <TextBox Text="{Binding CurrentVolunteer.Email, Mode=TwoWay}" Width="200" Grid.Row="3" Grid.Column="1"/>

        <Label Content="Password:" HorizontalAlignment="Right" Grid.Row="4"
               Visibility="{Binding ButtonText, Converter={StaticResource ConvertAddToVisibleKey}}"/>
        <TextBox Text="{Binding CurrentVolunteer.Password, Mode=TwoWay}" Width="200" Grid.Row="4" Grid.Column="1"
                 Visibility="{Binding ButtonText, Converter={StaticResource ConvertAddToVisibleKey}}"/>

        <Label Content="Address:" HorizontalAlignment="Right" Grid.Row="5"/>
        <TextBox Text="{Binding CurrentVolunteer.Address, Mode=TwoWay}" Width="200" Grid.Row="5" Grid.Column="1"/>

        <Label Content="Role:" HorizontalAlignment="Right" Grid.Row="6"/>
        <ComboBox SelectedItem="{Binding CurrentVolunteer.Role, Mode=TwoWay}" Width="200" Grid.Row="6" Grid.Column="1" ItemsSource="{Binding Source={StaticResource RoleCollectionKey}}" />

        <Label Content="Is Active:" HorizontalAlignment="Right" Grid.Row="7"/>
        <CheckBox IsChecked="{Binding CurrentVolunteer.IsActive, Mode=TwoWay}" Width="200" Grid.Row="7" Grid.Column="1"/>

        <Label Content="Max Distance:" HorizontalAlignment="Right" Grid.Row="8"/>
        <TextBox Text="{Binding CurrentVolunteer.MaxDistance, Mode=TwoWay}" PreviewTextInput="NumberTextBox_PreviewTextInput"
                 Width="200" Grid.Row="8" Grid.Column="1"/>

        <Label Content="Distance Type:" HorizontalAlignment="Right" Grid.Row="9"/>
        <ComboBox SelectedItem="{Binding CurrentVolunteer.DistanceType, Mode=TwoWay}" 
                  ItemsSource="{Binding Source={StaticResource DistanceTypeCollectionKey}}" 
                  Width="200" Grid.Row="9" Grid.Column="1" />

        <ContentControl Grid.Row="10" Grid.ColumnSpan="2" Margin="50,0,0,0" 
                        Visibility="{Binding CurrentVolunteer.Call, Converter={StaticResource NullToVisibilityConverterKey}}">
            <StackPanel Orientation="Vertical">
                <Label Content="Current Call:" HorizontalAlignment="Left" FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Id:" HorizontalAlignment="Left"/>
                    <Label Content="{Binding CurrentVolunteer.Call.Id, Mode=OneWay}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Call Type:" HorizontalAlignment="Left"/>
                    <Label Content="{Binding CurrentVolunteer.Call.CallType, Mode=OneWay}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Address:" HorizontalAlignment="Left"/>
                    <Label Content="{Binding CurrentVolunteer.Call.Address, Mode=OneWay}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Distance:" HorizontalAlignment="Left"/>
                    <Label Content="{Binding CurrentVolunteer.Call.Distance, Mode=OneWay}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Open Time:" HorizontalAlignment="Left"/>
                    <Label Content="{Binding CurrentVolunteer.Call.OpenTime, Mode=OneWay}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Insertion Time:" HorizontalAlignment="Left"/>
                    <Label Content="{Binding CurrentVolunteer.Call.Insersion, Mode=OneWay}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Status:" HorizontalAlignment="Left"/>
                    <Label Content="{Binding CurrentVolunteer.Call.Status, Mode=OneWay}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Description:" HorizontalAlignment="Left"/>
                    <Label Content="{Binding CurrentVolunteer.Call.Description, Mode=OneWay}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Max Close Time:" HorizontalAlignment="Left"/>
                    <Label Content="{Binding CurrentVolunteer.Call.MaxCloseTime, Mode=OneWay}" Width="200"/>
                </StackPanel>
            </StackPanel>
        </ContentControl>

        <Button Content="{Binding ButtonText}" Click="BtnAddUpdate_Click" Width="150" Grid.Row="12" Margin="102,10,148,14" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
