<Window x:Class="PL.ManagerWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="640"
        Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded"
        Closed="Window_Closed">

    <Grid Background="LightGreen">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Stretch" Height="auto" Grid.Row="0" VerticalAlignment="Stretch" Width="auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="194" 
                   Content="{Binding CurrentTime}"/>
            <Grid HorizontalAlignment="Stretch" Height="auto" Grid.Row="1" VerticalAlignment="Stretch" Width="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Advance by minute" Background="Green" 
                        HorizontalAlignment="Center" Grid.Column="0" VerticalAlignment="Center" 
                        Height="53" Width="122" Click="AddMinute_Click"  IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverseConverter}}"/>
                <Button Content="Advance by hour" Background="Green" 
                        HorizontalAlignment="Center" Grid.Column="1" VerticalAlignment="Center" 
                        Height="53" Width="122" Click="AddHour_Click"   IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverseConverter}}"/>
                <Button Content="Advance by day" Background="Green" 
                        HorizontalAlignment="Center" Grid.Column="2" VerticalAlignment="Center" 
                        Height="53" Width="122" Click="AddDay_Click"  IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverseConverter}}"/>
                <Button Content="Advance by month" Background="Green" 
                        HorizontalAlignment="Center" Grid.Column="3" VerticalAlignment="Center" 
                        Height="53" Width="122" Click="AddMonth_Click"    IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverseConverter}}"/>
                <Button Content="Advance by year" Background="Green" 
                        HorizontalAlignment="Center" Grid.Column="4" VerticalAlignment="Center" 
                        Height="53" Width="122" Click="AddYear_Click"    IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverseConverter}}"/>
            </Grid>
        </Grid>
        <Grid HorizontalAlignment="Stretch" Height="auto" Grid.Row="1" VerticalAlignment="Stretch" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding RiskRange}" HorizontalAlignment="Center" TextWrapping="Wrap" 
                     Grid.Column="0" VerticalAlignment="Center" Width="120" Background="Green"/>
            <Button Content="Update Risk Range" HorizontalAlignment="Center" Grid.Column="1" Background="Green"
                    VerticalAlignment="Center" Height="53" Width="122" Click="UpdateRiskRange"/>
            <TextBox Text="{Binding Interval, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" IsReadOnly="{Binding IsSimulatorRunning}"
                     HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Background="Green"/>
            <Button Content="{Binding IsSimulatorRunning, Converter={StaticResource BoolToStartStopConverter}}" Grid.Column="4"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Height="53"  Width="122" Click="ToggleSimulator" Background="Green"/>
        </Grid>
        <Grid HorizontalAlignment="Stretch" Height="auto" Grid.Row="3" VerticalAlignment="Stretch" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Volunteers" Background="Green" HorizontalAlignment="Center" 
                    Grid.Column="0" VerticalAlignment="Center" Height="53" Width="122"  Click="VolunteersList_Click"/>
            <Button Content="Calls" Background="Green" HorizontalAlignment="Center" 
                    Grid.Column="1" VerticalAlignment="Center" Height="53" Width="122"  Click="CallsList_Click"/>
            <Button Content="InitializationDB" Background="Green" HorizontalAlignment="Center" 
                    Grid.Column="2" VerticalAlignment="Center" Height="53" Width="122"  Click="InitializationDB_Click"  IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverseConverter}}"/>
            <Button Content="ResetDB" Background="Green" HorizontalAlignment="Center" 
                    Grid.Column="3" VerticalAlignment="Center" Height="53" Width="122"  Click="ResetDB_Click"  IsEnabled="{Binding IsSimulatorRunning, Converter={StaticResource BooleanInverseConverter}}"/>
        </Grid>
    </Grid>
</Window>